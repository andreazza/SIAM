		window.onresize=function()
		{	
			var w=window.innerWidth;
			if (document.body.clientHeight)
    			{
        			w=document.body.clientHeight;//IE
    			}
			if(w > 480 ) {
        			$("#mobilemenucards").removeAttr('style');
        		}
			mobilebodycolor();
			
		}
		function mobilebodycolor()
		{
			var w=window.innerWidth;
			if( w < 721 )
			{
				document.getElementById('mobilebackground').style.backgroundColor = mobileviewbackground;
			}
			else
			{
				$("#mobilebackground").removeAttr('style');

			}
		}

